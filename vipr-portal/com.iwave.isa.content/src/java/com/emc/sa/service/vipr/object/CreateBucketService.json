{
  baseKey:"ObjectStorageService.CreateBucket",
  serviceId:"CreateBucket",
  fields:{

    virtualArray:{
      type:"assetType.vipr.virtualArray",
      lockable:true
    },
    
    virtualPool:{
      type:"assetType.vipr.objectVirtualPool",
      lockable:true
    },
    
    project:{
      type:"assetType.vipr.project",
      lockable: true
    }, 
    
    name:{
        type:"text",
        validation:{
            regEx:"[a-zA-Z0-9_]+",
            min:2,
            max:128
        }
    },
    
    softQuota:{
        type:"storageSize",
        validation:{
            min:1
        }
    },
    
    hardQuota:{
        type:"storageSize",
        validation:{
            min:1
        }
    },
    
    retention:{
        type:"number",
        validation:{
            min:0
        }
    },
    
    owner:{
        type:"text",
        required: "false",
        validation:{
            min:2,
            max:128
        }
    },
    
    accessControlList:{
      type:"group",
      collapsed:"false",
      items:{
        aclType:{
          type: "choice",
          initialValue: "USER",
          select: "one",
          required: false,
          options: {
            "USER": "User",
            "GROUP": "Group",
            "CUSTOMGROUP": "Custom Group"
          }
        },
        
        aclName:{
          type:"text",
          required: false
        },
          
        aclDomain:{
          type:"text",
          required: false
        },
        
        aclPermission:{
          type:"assetType.vipr.objectACLPermission",
          initialValue:"NONE",
          select: "many"
        }
      }
    }
  }
}